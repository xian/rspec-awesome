<idea-plugin version="2">
  <id>com.pivotallabs.rspec</id>
  <name>RSpec Awesome</name>
  <version>1.0</version>
  <vendor email="xian@pivotallabs.com" url="http://pivotallabs.com">Pivotal Labs</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>
  <depends optional="true">org.jetbrains.plugins.ruby</depends>
  <depends>com.intellij.modules.ruby</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <component>
      <implementation-class>com.pivotallabs.rspec.ProjectComponent</implementation-class>
    </component>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <action id="com.pivotallabs.rspecawesome.ShowLetValue" class="com.pivotallabs.rspec.ShowLetValue"
            text="Show Let Value">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta alt L"/>
    </action>
  </actions>

</idea-plugin>